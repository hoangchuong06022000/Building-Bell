<body class="BlueTheme">
    <div id="outer">
        <div id="headerHome">
            <!--Top Navigation Bar-->
            @Html.Sitecore().Placeholder("top_nav_bar")
            <div class="Clr">
            </div>
            <!--banner main of page, click Button will open popup window-->
            <div class="Banner">
                <div class="Logo">
                    <img src="~/Content/images/logo-home.png" alt="Building Bell Logo" />
                </div>
                <div class="ButtonHome">
                    <a href="/HomeCaseSudy" id="button"> <img src="~/Content/images/button-home.png" alt="Building Bell Logo" title="Building Bell Logo" /></a>
                </div>
                <div class="MapHome">
                    <img src="~/Content/images/map-home.png" alt="Building Bell Logo" />
                </div>
            </div>
        </div>
        <!--Rendering Body-->
        @Html.Sitecore().Placeholder("main_body")
        <div id="Footer" class="FooterMargin">
            <div id="FooterContent">
                <div class="FooterBlock01">
                    <h3 class="FooterHeading"> About</h3>
                    <p>
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer in velit id metus
                        dignissim tincidunt vitae vitae nulla. In tortor enim, aliquam nec semper in, rhoncus
                        faucibus augue,...
                    </p>
                </div>
                <div class="FooterBlock02">
                    <p class="CopyrightText">
                        &copy; @DateTime.Now.Year Buildingbell &ndash; <a href="mailto:info@buildingbell.com" title="Send mail to info@buildingbell.com"> info@buildingbell.com</a> &ndash; Legal information
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!--popup content-->
    <!--Add 2 div background-->
    <div id="popupContainer" class="hidden">
        <div id="popupContainerBottom">
            <div id="popupContainerMiddle">
                <a id="close" class="hidden" title="close popup" style="display: inline;"></a>
                <h2 class="TitleH2 DarkScheme"><strong>Bulding Bell </strong>in 60 sec </h2>
                <iframe src="http://www.youtube.com/embed/eNBNDvkQ2XQ" frameborder="0" allowfullscreen="true"></iframe>
            </div>
        </div>
    </div>
    <!--Add 2 div background-->
    <div id="overlayEffect"></div>
    <!--end popup content-->
    <!--Js General-->
    <script type="text/javascript" src="~/Content/js/jquery-core.js"></script>
    <script type="text/javascript" src="~/Content/js/jquery-ui-core.js"></script>
    <script type="text/javascript" src="~/Content/js/jquery.mediaqueries.js"></script>

    <!--Pop-up-->
    <script src="~/Content/js/script.js" type="text/javascript"></script>

    <!--End Pop-up-->
