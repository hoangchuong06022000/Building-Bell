<div id="content">
    <div id="innerContent01">
        <div id="innerContent02">
            <div id="mainContent">
                <!--Images Slide -->
                <div class="BackButton">
                    <a href="/TransactionList" title="Back to list" class="BackBtn "><span class="ColorBackBtn">@Sitecore.Globalization.Translate.Text("back")</span></a>
                </div>
                <div class="HrReplacement HrStyle05 LineNavigation1">
