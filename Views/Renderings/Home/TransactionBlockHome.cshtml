<div class="BlockFunction">
    <div class="BlockFunctionColumnBalance">
        <div class="ContentBox1">
            <div class="Box1Img">
                <img src="~/Content/images/box-1.png" alt="Transaction Search Button" title="Search" />
            </div>
            <div class="Box1Text">
                <h3 class="TitleH2 BoxTitle TitleColor">
                    @Sitecore.Globalization.Translate.Text("transaction-home")
                </h3>
                <div class="BoxText">
                    @Sitecore.Globalization.Translate.Text("content-block")
                </div>
                @using (Html.BeginRouteForm(Sitecore.Mvc.Configuration.MvcSettings.SitecoreRouteName, FormMethod.Post))
                {
                    @Html.Sitecore().FormHandler("Home", "GetTransactionSearchResult")
                    <div class="BoxSearch">
                        <input class="Input LightScheme" placeholder="@Sitecore.Globalization.Translate.Text("button-search")..." type="text" name="stringSearch" />
                        <input class="Submit" value="" type="submit" />
                    </div>
                }
            </div>

            <div class="Clr">
            </div>
        </div>
        <div class="ContentBox2">
            <div class="Box2Img">
                <img src="~/Content/images/box-2.png" alt="Transaction Search Button" title="Search" />
            </div>
            <div class="Box2Text">
                <h3 class="TitleH2 Box2Title Color">
                    @Sitecore.Globalization.Translate.Text("residence-home")
                </h3>
                <div class="BoxText2 ">
                    @Sitecore.Globalization.Translate.Text("content-block")
                </div>
                <div class="BoxSearch2">
                    <input class="Input LightScheme" placeholder="@Sitecore.Globalization.Translate.Text("button-search")..." type="text" />
                    <input class="Submit1" value="" type="submit" />
                </div>
            </div>
            <div class="Clr">
            </div>
        </div>
        <div class="ContentBox3">
            <div class="Box3Img">
                <img src="~/Content/images/box-3.png" alt="Transaction Search Button" title="Search" />
            </div>
            <div class="Box3Text">
                <h3 class="TitleH2 BoxTitle Color2">
                    @Sitecore.Globalization.Translate.Text("newsletter")
                </h3>
                <div class="BoxText3 ">
                    @Sitecore.Globalization.Translate.Text("content-block")
                </div>
                <div class="BoxSearch3">
                    <input class="Input LightScheme" placeholder="@Sitecore.Globalization.Translate.Text("button-search")..." type="text" id="stringSearch" name="stringSearch"/>
                    <input class="Submit2" value="" type="submit" />
                </div>
            </div>
            <div class="Clr">
            </div>
        </div>
    </div>
</div>